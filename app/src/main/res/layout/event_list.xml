<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/hintColor">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="6">
            <TextView
                android:id="@+id/eventNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:hint="Event Name"
                android:gravity="center_vertical"
                android:textColorHint="@color/NavDrawerBackgroundColor"
                android:textColor="@color/NavDrawerBackgroundColor"
                />
            <TextView
                android:id="@+id/destinationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:hint="Destination"
                android:textColorHint="@color/NavDrawerBackgroundColor"
                android:textColor="@color/NavDrawerBackgroundColor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/userIDTv"
            android:layout_width="wrap_content"
            android:layout_height="90sp"
            android:hint="userID"
            android:textSize="20sp"
            android:textColorHint="@color/NavDrawerBackgroundColor"
            android:textColor="@color/NavDrawerBackgroundColor"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="right">
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:hint="23/12/2016"
                android:textColorHint="@color/NavDrawerBackgroundColor"
                android:textColor="@color/NavDrawerBackgroundColor"/>
            <TextView
                android:id="@+id/daysLeftTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:hint="days left"
                android:textColorHint="@color/NavDrawerBackgroundColor"
                android:textColor="@color/NavDrawerBackgroundColor"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>